<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
 >
    <include
        layout="@layout/title_chenjin"
        />
<include
    layout="@layout/title_back"
    />
    <TextView
        android:id="@+id/id_xinde_test1"
        android:layout_marginTop="@dimen/param_14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/param_10dp"
     android:text="上传内容*"
        android:textColor="@color/dj_textcolors"
        />
<EditText
    android:layout_marginTop="@dimen/param_4dp"
    android:layout_marginRight="@dimen/param_10dp"
    android:layout_marginLeft="@dimen/param_10dp"
    android:layout_width="match_parent"
    android:background="@color/dj_hui"
    android:hint="请输入内容，1-2000个字符"
    android:gravity="top|left"
    android:textSize="@dimen/param_12dp"
    android:textColorHint="@color/dj_textcolorhui2"
    android:layout_height="130dp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/param_10dp"
        android:layout_marginTop="@dimen/param_17dp"
        />
<TextView
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/param_38dp"
    android:layout_width="@dimen/param_180dp"
    android:layout_height="@dimen/param_45dp"
    android:textSize="@dimen/param_19dp"
    android:textColor="@color/white"
    android:background="@drawable/yuanjiaored_4dp"
    android:text="提交"
    android:gravity="center"

    />



</LinearLayout>